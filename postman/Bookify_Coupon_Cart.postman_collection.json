{
  "info": {
    "name": "Bookify - Coupon & Cart API",
    "description": "Test collection for Coupon and Cart modules",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1"
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "couponId",
      "value": ""
    },
    {
      "key": "bookId",
      "value": ""
    },
    {
      "key": "cartItemId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Coupon",
      "item": [
        {
          "name": "Create Coupon (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"SUMMER20\",\n  \"expiresIn\": \"2025-12-31\",\n  \"discount\": 20,\n  \"isActive\": true,\n  \"usageLimit\": 100\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/coupons",
              "host": ["{{baseUrl}}"],
              "path": ["coupons"]
            }
          }
        },
        {
          "name": "Get All Coupons (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/coupons?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["coupons"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          }
        },
        {
          "name": "Get Single Coupon (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/coupons/{{couponId}}",
              "host": ["{{baseUrl}}"],
              "path": ["coupons", "{{couponId}}"]
            }
          }
        },
        {
          "name": "Update Coupon (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"discount\": 25,\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/coupons/{{couponId}}",
              "host": ["{{baseUrl}}"],
              "path": ["coupons", "{{couponId}}"]
            }
          }
        },
        {
          "name": "Delete Coupon (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/coupons/{{couponId}}",
              "host": ["{{baseUrl}}"],
              "path": ["coupons", "{{couponId}}"]
            }
          }
        },
        {
          "name": "Apply Coupon (User)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"SUMMER20\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/coupons/apply",
              "host": ["{{baseUrl}}"],
              "path": ["coupons", "apply"]
            }
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/cart",
              "host": ["{{baseUrl}}"],
              "path": ["cart"]
            }
          }
        },
        {
          "name": "Add to Cart (Digital)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bookId\": \"{{bookId}}\",\n  \"format\": \"digital\",\n  \"quantity\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart",
              "host": ["{{baseUrl}}"],
              "path": ["cart"]
            }
          }
        },
        {
          "name": "Add to Cart (Physical)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bookId\": \"{{bookId}}\",\n  \"format\": \"physical\",\n  \"quantity\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart",
              "host": ["{{baseUrl}}"],
              "path": ["cart"]
            }
          }
        },
        {
          "name": "Update Cart Item Quantity",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 3\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/{{cartItemId}}",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "{{cartItemId}}"]
            }
          }
        },
        {
          "name": "Remove Item from Cart",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/cart/{{cartItemId}}",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "{{cartItemId}}"]
            }
          }
        },
        {
          "name": "Apply Coupon to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"coupon\": \"SUMMER20\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/apply-coupon",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "apply-coupon"]
            }
          }
        },
        {
          "name": "Remove Coupon from Cart",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/cart/coupon",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "coupon"]
            }
          }
        },
        {
          "name": "Clear Cart",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/cart",
              "host": ["{{baseUrl}}"],
              "path": ["cart"]
            }
          }
        }
      ]
    }
  ]
}
